public class Solution {
   
   public static void main(String[] args) {
      Scanner scanner = new Scanner(System.in);
      int n=scanner.nextInt();
      ArrayList<Integer> L1=new ArrayList<>();
      ArrayList<Integer> L2=new ArrayList<>();
      int s1=n*(n+1)/2;
      if (s1%2==1) {
         System.out.println("NO");
      }
      else{
         System.out.println("YES");
         int target=s1/2;
         int last_sub=0;
         for(int i=n;i>=1;i--){
            if (target>i){
               target=target-i;
               L1.add(i);
               last_sub=i;
            }
            else{
               L1.add(target);
               break;
            }
         }
         for(int j=1;j<last_sub;j++){
            if (j==target) {
               continue;
            }
            else{
               L2.add(j);
            }
         }
      System.out.println(L1.size());
      for(int i:L1){
         System.out.print(i);
         System.out.print(" ");
      }
      System.out.println();
      System.out.println(L2.size());
      for(int i:L2){
         System.out.print(i);
         System.out.print(" ");
      }
      }
      


      scanner.close();
      }
      
   }

THIS IS THE CODE WITH SLIGHT CORRECTIONS MADE BY chatGPT
import java.util.ArrayList;
import java.util.Scanner;

public class Solution {
   
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int n = scanner.nextInt();
        ArrayList<Integer> L1 = new ArrayList<>();
        ArrayList<Integer> L2 = new ArrayList<>();
        int s1 = n * (n + 1) / 2;

        if (s1 % 2 == 1) {
            System.out.println("NO");
        } else {
            System.out.println("YES");
            int target = s1 / 2;

            // Use an array to keep track of whether each number has been used
            boolean[] used = new boolean[n + 1];

            for (int i = n; i >= 1; i--) {
                if (target >= i && !used[i]) {
                    L1.add(i);
                    used[i] = true;
                    target -= i;
                } else {
                    L2.add(i);
                }
            }

            System.out.println(L1.size());
            for (int i : L1) {
                System.out.print(i + " ");
            }
            System.out.println();

            System.out.println(L2.size());
            for (int i : L2) {
                System.out.print(i + " ");
            }
        }

        scanner.close();
    }
}
